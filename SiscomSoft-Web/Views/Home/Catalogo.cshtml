
@{
    ViewBag.Title = "Catalogo";
    List<SiscomSoft.Models.Catalogo> dato = ViewBag.dato;
}

<div class="col-xs-12">
    <div class="col-xs-12">
        <h2>Catalogo</h2>
        <h2 class="col-xs-9">&nbsp;</h2> <h2 class="col-xs-3"><a href="~/Home/AgregarCatalogo">Agregar</a></h2>
    </div>
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-condensed col-xs-12">
                    <thead>
                        <tr>
                            <td class="col-xs-5">Id</td>
                            <td class="col-xs-5">Catalogo</td>
                            <td class="col-xs-2"></td>
                        </tr>
                    </thead>
            </div>
            <!--Aqui se utiliza el forech para rellenar el cuadro-->
            @foreach (SiscomSoft.Models.Catalogo item in dato)
            {
                <tr>
                    <td>@item.pkCatalogo</td>
                    <td>@item.sUDM</td>
                    <td>
                        &nbsp;&nbsp;&nbsp;
                        <a href="~/Home/ActualizarCatalogo/@item.pkCatalogo">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        &nbsp;&nbsp;&nbsp;
                        <a href="~/Home/BorrarCatalogo/@item.pkCatalogo">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            }
            </table>
        </div>
    </div>
</div>
