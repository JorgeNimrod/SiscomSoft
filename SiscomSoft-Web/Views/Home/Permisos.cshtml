
@{
    ViewBag.Title = "Permisos";
    List<SiscomSoft.Models.Permiso> dato = ViewBag.dato;
}

<div class="col-xs-12">
    <div class="col-xs-12"> 
        <h2>Empresas</h2>
        <h2 class="col-xs-9">&nbsp;</h2> <h2 class="col-xs-3"><a href="~/Home/AgregarPermiso">Agregar</a></h2>
    </div>
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-condensed col-xs-12">
                    <thead>
                        <tr>
                            <td class="col-xs-1">Id</td>
                            <td class="col-xs-5">Nombre</td>
                            <td class="col-xs-5">Comentario</td>
                            <td class="col-xs-1"></td>
                        </tr>
                    </thead>
            </div>
            <!--Aqui se utiliza el forech para rellenar el cuadro-->
            @foreach (SiscomSoft.Models.Permiso item in dato)
            {
                <tr>

                    <td>@item.pkPermiso</td>
                    <td>@item.sNombre</td>
                    <td>@item.sComentario</td>
                    <td>
                        <a href="~/Home/ActualizarPermiso/@item.pkPermiso">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <a href="~/Home/BorrarPermiso/@item.pkPermiso">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            }
            </table>
        </div>
    </div>
</div>


