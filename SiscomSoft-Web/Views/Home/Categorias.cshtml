
@{
    ViewBag.Title = "Categorias";
    List<SiscomSoft.Models.Categoria> dato = ViewBag.dato;
}


<div class="col-xs-12">
    <div class="col-xs-12">
        <h2>Categorias</h2>
        <h2 class="col-xs-9">&nbsp;</h2> <h2 class="col-xs-3"><a href="~/Home/frmNuevo">Agregar</a></h2>
    </div>
        <div class="container">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table table-condensed col-xs-12">
                        <thead>
                            <tr>
                                <td class="col-xs-3">Id</td>
                                <td class="col-xs-4">Categoria</td>
                                <td class="col-xs-3">Sub Categoria</td>
                                <td class="col-xs-2"></td>
                            </tr>
                        </thead>
                        </div>
                        <!--Aqui se utiliza el forech para rellenar el cuadro-->
                        @foreach (SiscomSoft.Models.Categoria item in dato)
                        {
                            <tr>
                                <td>@item.pkCategoria</td>
                                <td>@item.sNombre</td>
                                <td>@item.sNomSubCat</td>
                                <td>
                                    &nbsp;&nbsp;&nbsp;
                                    <a href="~/Home/ActualizarCat/@item.pkCategoria">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                    &nbsp;&nbsp;&nbsp;
                                    <a href="~/Home/Borrar/@item.pkCategoria">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
