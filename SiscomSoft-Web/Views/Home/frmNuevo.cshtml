
@{
    ViewBag.Title = "frmNuevo";
}
<div class="container">
    @using (Html.BeginForm("Guardar", "Home", FormMethod.Post))
    {
        <input type="hidden" name="txtID" />
        <div class="form-group">
            <label class="control-label col-xs-3">Nombre: </label>
            <div class="col-xs-12">
                <input type="text" name="txtNombre" class="form-control" placeholder="" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-xs-3">Sub categoria: </label>
            <div class="col-xs-12">
                <input type="text" name="txtSubCategoria" class="form-control" placeholder="" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <input type="reset" value="Limpiar" class="btn btn-default" />
            </div>
        </div>

    }
</div>
