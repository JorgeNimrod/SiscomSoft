
@{
    ViewBag.Title = "ActualizarPermiso";
    SiscomSoft.Models.Permiso Dato = ViewBag.id;
}

<div class="container">
    @using (Html.BeginForm("VerificarPermiso", "Home", FormMethod.Get))
    {
        <input type="hidden" name="txtpkPermiso" value="@Dato.pkPermiso" />

        <div class="form-group">
            <label class="control-label col-xs-12">Permiso</label>
            <div class="col-xs-12">
                <input type="text" class="form-control" placeholder="@Dato.sNombre" value="@Dato.sNombre" name="txtNombre">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-12">Comentario</label>
            <div class="col-xs-12">
                <input type="text" class="form-control" placeholder="@Dato.sComentario" value="@Dato.sComentario" name="txtComentario">
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-xs-12">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
                <input type="reset" value="Limpiar" class="btn btn-default" />
            </div>
        </div>
    }
</div>

