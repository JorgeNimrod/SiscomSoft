
@{
    ViewBag.Title = "ActualizarProductos";
    SiscomSoft.Models.Producto Dato = ViewBag.id;
}

<div class="container">
    @using (Html.BeginForm("VerificarProductos", "Home", FormMethod.Get))
    {
        <input type="hidden" name="txtpkProducto" value="@Dato.pkProducto" />

        <div class="form-group">
            <label class="control-label col-xs-12">Clave de producto</label>
            <div class="col-xs-12">
                <input type="text" class="form-control" placeholder="@Dato.iClaveProd" value="@Dato.iClaveProd" name="txtClaveProd">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-12">Descripción</label>
            <div class="col-xs-12">
                <input type="text" class="form-control" placeholder="@Dato.sDescripcion" value="@Dato.sDescripcion" name="txtDescripcion">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-12">Marca</label>
            <div class="col-xs-12">
                <input type="number" class="form-control" placeholder="@Dato.sMarca" value="@Dato.sMarca" name="txtMarca">
            </div>
        </div><div class="form-group">
    <label class="control-label col-xs-12">Costo</label>
    <div class="col-xs-12">
        <input type="text" class="form-control" placeholder="@Dato.dCosto" value="@Dato.dCosto" name="txtCosto">
    </div>
</div>
        <div class="form-group">
            <label class="control-label col-xs-12">Decuento</label>
            <div class="col-xs-12">
                <input type="text" class="form-control" placeholder="@Dato.iDescuento" value="@Dato.iDescuento" name="txtDescuento">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-12">Foto</label>
            <div class="col-xs-12">
                <input type="number" class="form-control" placeholder="@Dato.sFoto" value="@Dato.sFoto" name="txtFoto">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-12">Caducidad</label>
            <div class="col-xs-12">
                <input type="text" class="form-control" placeholder="@Dato.dtCaducidad" value="@Dato.dtCaducidad" name="txtCaducidad">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-12">Lote</label>
            <div class="col-xs-12">
                <input type="text" class="form-control" placeholder="@Dato.iLote" value="@Dato.iLote" name="txtLote">
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-xs-12">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
                <input type="reset" value="Limpiar" class="btn btn-default" />
            </div>
        </div>
    }
</div>
