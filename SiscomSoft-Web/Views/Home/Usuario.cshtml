
@{
    ViewBag.Title = "Usuario";
    List<SiscomSoft.Models.Usuario> dato = ViewBag.dato;
}

<div class="col-xs-12">
    <div class="col-xs-12">
        <h2>Usuario</h2>
        <h2 class="col-xs-9">&nbsp;</h2> <h2 class="col-xs-3"><a href="~/Home/AgregarUsuario">Agregar</a></h2>
    </div>
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-condensed col-xs-12">
                    <thead>
                        <tr>
                            <td class="col-xs-1">Id</td>
                            <td class="col-xs-1">Rfc</td>
                            <td class="col-xs-1">Usuario</td>
                            <td class="col-xs-3">Nombre completo</td>
                            <td class="col-xs-1">Telefono</td>
                            <td class="col-xs-1">Correo</td>
                            <td class="col-xs-1">Comentario </td>
                            <td class="col-xs-2"></td>
                        </tr>
                    </thead>
            </div>
            <!--Aqui se utiliza el forech para rellenar el cuadro-->
            @foreach (SiscomSoft.Models.Usuario item in dato)
            {
                <tr>
                    <td>@item.pkUsuario</td>
                    <td>@item.sRfc</td>
                    <td>@item.sUsuario</td>
                    <td>@item.sNombre</td>
                    <td>@item.sNumero</td>
                    <td>@item.sCorreo</td>
                    <td>@item.sComentario</td>
                    <td>
                        &nbsp;&nbsp;&nbsp;
                        <a href="~/Home/ActualizarUsuario/@item.pkUsuario">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        &nbsp;&nbsp;&nbsp;
                        <a href="~/Home/BorrarUsuario/@item.pkUsuario">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            }
            </table>
        </div>
    </div>
</div>

