
@{
    ViewBag.Title = "BorrarCliente";
    SiscomSoft.Models.Cliente Dato = ViewBag.Dato;
}

<div class="container">
    <h3> Datos a borrar </h3>
    <div class="alert alert-success col-xs-12" role="alert">
        <ul>
            <li>Nombre: <strong>@Dato.sRfc</strong></li>
            <li>Apellido: <strong>@Dato.sRazonSocial</strong></li>
            <li>Nombre: <strong>@Dato.iPersona</strong></li>
            <li>Apellido: <strong>@Dato.sCurp</strong></li>
            <li>Nombre: <strong>@Dato.sNombre</strong></li>
            <li>Apellido: <strong>@Dato.sPais</strong></li>
            <li>Nombre: <strong>@Dato.iCodPostal</strong></li>
            <li>Apellido: <strong>@Dato.sEstado</strong></li>
            <li>Nombre: <strong>@Dato.sMunicipio</strong></li>
            <li>Apellido: <strong>@Dato.sLocalidad</strong></li>
            <li>Nombre: <strong>@Dato.sColonia</strong></li>
            <li>Apellido: <strong>@Dato.sCalle</strong></li>
            <li>Nombre: <strong>@Dato.iNumExterior</strong></li>
            <li>Apellido: <strong>@Dato.iNumInterior</strong></li>
            <li>Nombre: <strong>@Dato.sTelFijo</strong></li>
            <li>Apellido: <strong>@Dato.sTelMovil</strong></li>
            <li>Nombre: <strong>@Dato.sCorreo</strong></li>
            <li>Apellido: <strong>@Dato.sReferencia</strong></li>
            <li>Nombre: <strong>@Dato.sTipoPago</strong></li>
            <li>Nombre: <strong>@Dato.sNumCuenta</strong></li>
            <li>Apellido: <strong>@Dato.sConPago</strong></li>
            <li>Nombre: <strong>@Dato.sTipoCliente</strong></li>
            <li>Apellido: <strong>@Dato.sLogo</strong></li>
            <li>Nombre: <strong>@Dato.sNombre</strong></li>
            
        </ul>
    </div>
    @using (Html.BeginForm("EliminarCliente", "Home", FormMethod.Post))
    {
        <input type="hidden" value="@Dato.pkCliente" name="txtId" />
        <div class="row">
            <div class="form-group">
                <div class="col-xs-12">
                    <input type="submit" value="Borrar" class="btn btn-danger" />
                    <a href="~/Home" class="btn btn-default"></a>
                </div>
            </div>
        </div>
    }
</div>


