
@{
    ViewBag.Title = "BorrarUsuario";
    SiscomSoft.Models.Usuario Dato = ViewBag.Dato;
}
<div class="container">
    <h3> Datos a borrar </h3>
    <div class="alert alert-success col-xs-12" role="alert">
        <ul>
            <li>RFC: <strong>@Dato.sRfc</strong></li>
            <li>Usuario: <strong>@Dato.sUsuario</strong></li>
            <li>Nombre: <strong>@Dato.sNombre</strong></li>
            <li>Numero: <strong>@Dato.sNumero</strong></li>
            <li>Correo: <strong>@Dato.sCorreo</strong></li>
            <li>Comentario: <strong>@Dato.sComentario</strong></li>
        </ul>
    </div>
    @using (Html.BeginForm("EliminarUsuario", "Home", FormMethod.Post))
    {
        <input type="hidden" value="@Dato.pkUsuario" name="txtId" />
        <div class="row">
            <div class="form-group">
                <div class="col-xs-12">
                    <input type="submit" value="Borrar" class="btn btn-danger" />
                    <a href="~/Home/Empresas" class="btn btn-default">Regresar</a>
                </div>
            </div>
        </div>
    }
</div>

