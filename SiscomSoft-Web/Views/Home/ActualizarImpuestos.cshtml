
@{
    ViewBag.Title = "ActualizarImpuestos";
    SiscomSoft.Models.Impuesto Dato = ViewBag.id;
}

<div class="container">
    @using (Html.BeginForm("VerificarImpuestos", "Home", FormMethod.Get))
    {
        <input type="hidden" name="txtpkImpuesto" value="@Dato.pkImpuesto" />

        <div class="form-group">
            <label class="control-label col-xs-12">Tipo de impuesto</label>
            <div class="col-xs-12">
                <input type="text" class="form-control" placeholder="@Dato.sTipoImpuesto" value="@Dato.sTipoImpuesto" name="txtTipoImpuesto">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-12">Impuesto</label>
            <div class="col-xs-12">
                <input type="text" class="form-control" placeholder="@Dato.sImpuesto" value="@Dato.sImpuesto" name="txtImpuesto">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-12">Tasa</label>
            <div class="col-xs-12">
                <input type="number" class="form-control" placeholder="@Dato.dTasaImpuesto" value="@Dato.dTasaImpuesto" name="txtTasaImpuesto">
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-xs-12">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
                <input type="reset" value="Limpiar" class="btn btn-default" />
            </div>
        </div>
    }
</div>



