
@{
    ViewBag.Title = "Impuestos";
    List<SiscomSoft.Models.Impuesto> dato = ViewBag.dato;
}

<div class="col-xs-12">
    <div class="col-xs-12">
        <h2>Impuestos</h2>
        <h2 class="col-xs-9">&nbsp;</h2> <h2 class="col-xs-3"><a href="~/Home/AgregarImpuesto">Agregar</a></h2>
    </div>
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-condensed col-xs-12">
                    <thead>
                        <tr>
                            <td class="col-xs-1">Id</td>
                            <td class="col-xs-4">Tipo de impuesto</td>
                            <td class="col-xs-4">Impuesto</td>
                            <td class="col-xs-2">Tasa de impuesto</td>
                            <td class="col-xs-1"></td>
                        </tr>
                    </thead>
            </div>
            <!--Aqui se utiliza el forech para rellenar el cuadro-->
            @foreach (SiscomSoft.Models.Impuesto item in dato)
            {
                <tr>
                    <td>@item.pkImpuesto</td>
                    <td>@item.sTipoImpuesto</td>
                    <td>@item.sImpuesto</td>
                    <td>@item.dTasaImpuesto</td>
                    <td>
                        &nbsp;&nbsp;&nbsp;
                        <a href="~/Home/ActualizarImpuestos/@item.pkImpuesto">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        &nbsp;&nbsp;&nbsp;
                        <a href="~/Home/BorrarImpuesto/@item.pkImpuesto">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            }
            </table>
        </div>
    </div>
</div>



