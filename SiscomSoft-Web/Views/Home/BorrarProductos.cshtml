
@{
    ViewBag.Title = "BorrarProductos";
    SiscomSoft.Models.Producto Dato = ViewBag.Dato;
}

<div class="container">
    <h3> Datos a borrar </h3>
    <div class="alert alert-success col-xs-12" role="alert">
        <ul>
            <li>Clave: <strong>@Dato.iClaveProd</strong></li>
            <li>Descripción: <strong>@Dato.sDescripcion</strong></li>
            <li>Marca: <strong>@Dato.sMarca</strong></li>
            <li>Costo: <strong>@Dato.dCosto</strong></li>
            <li>Foto: <strong>@Dato.sFoto</strong></li>
            <li>Caducidad: <strong>@Dato.dtCaducidad</strong></li>
            <li>Lote: <strong>@Dato.iLote</strong></li>
        </ul>
    </div>
    @using (Html.BeginForm("EliminarProducto", "Home", FormMethod.Post))
    {
        <input type="hidden" value="@Dato.pkProducto" name="txtId" />
        <div class="row">
            <div class="form-group">
                <div class="col-xs-12">
                    <input type="submit" value="Borrar" class="btn btn-danger" />
                    <a href="~/Home" class="btn btn-default"></a>
                </div>
            </div>
        </div>
    }
</div>

