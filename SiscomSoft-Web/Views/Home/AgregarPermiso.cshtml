
@{
    ViewBag.Title = "AgregarPermiso";
}

<div class="container">
    @using (Html.BeginForm("GuardarPermiso", "Home", FormMethod.Post))
    {
        <input type="hidden" name="txtID" />
        <div class="form-group">
            <label class="control-label col-xs-3">Permiso: </label>
            <div class="col-xs-12">
                <input type="text" name="txtNombre" class="form-control" placeholder="" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">Comentario: </label>
            <div class="col-xs-12">
                <input type="text" name="txtComentario" class="form-control" placeholder="" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <input type="reset" value="Limpiar" class="btn btn-default" />
            </div>
        </div>

    }
</div>

