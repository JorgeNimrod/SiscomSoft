
@{
    ViewBag.Title = "Productos";
    List<SiscomSoft.Models.Producto> dato = ViewBag.dato;
}

<div class="col-xs-12">
    <div class="col-xs-12">
        <h2>Categorias</h2>
        <h2 class="col-xs-9">&nbsp;</h2> <h2 class="col-xs-3"><a href="~/Home/AgregarProducto">Agregar</a></h2>
    </div>
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-condensed col-xs-12">
                    <thead>
                        <tr>
                            <td class="col-xs-1">Id</td>
                            <td class="col-xs-1">Clave</td>
                            <td class="col-xs-1">Descripcion</td>
                            <td class="col-xs-1">Marca</td>
                            <td class="col-xs-1">Costo</td>
                            <td class="col-xs-1">Descuento</td>
                            <td class="col-xs-1">Foto</td>
                            <td class="col-xs-3">Caducidad</td>
                            <td class="col-xs-1">Lote</td>
                            <td class="col-xs-1"></td>
                        </tr>
                    </thead>
            </div>
            <!--Aqui se utiliza el forech para rellenar el cuadro-->
            @foreach (SiscomSoft.Models.Producto item in dato)
            {
                <tr>
                    <td>@item.pkProducto</td>
                    <td>@item.iClaveProd</td>
                    <td>@item.sDescripcion</td>
                    <td>@item.sMarca</td>
                    <td>@item.dCosto</td>
                    <td>@item.iDescuento</td>
                    <td>@item.sFoto</td>
                    <td>@item.dtCaducidad</td>
                    <td>@item.iLote</td>
                    <td>
                        &nbsp;&nbsp;&nbsp;
                        <a href="~/Home/ActualizarProductos/@item.pkProducto">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        &nbsp;&nbsp;&nbsp;
                        <a href="~/Home/BorrarProductos/@item.pkProducto">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            }
            </table>
        </div>
    </div>
</div>

 

