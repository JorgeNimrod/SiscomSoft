
@{
    ViewBag.Title = "BorrarEmpresa";
    SiscomSoft.Models.Empresa Dato = ViewBag.Dato;
}
<div class="container">
    <h3> Datos a borrar </h3>
    <div class="alert alert-success col-xs-12" role="alert">
        <ul>
            <li>Razon Social: <strong>@Dato.sRazonSocial</strong></li>
            <li>Nombre comercial: <strong>@Dato.sNomComercial</strong></li>
            <li>Nombre contacto: <strong>@Dato.sNomContacto</strong></li>
            <li>Regimen fiscal: <strong>@Dato.sRegFiscal</strong></li>
            <li>Telefono: <strong>@Dato.sTelefono</strong></li>
            <li>Correo: <strong>@Dato.sCorreo</strong></li>
            <li>Pais: <strong>@Dato.sPais</strong></li>
            <li>Estado: <strong>@Dato.sEstado</strong></li>
            <li>Municipio: <strong>@Dato.sMunicipio</strong></li>
            <li>Colonia: <strong>@Dato.sColonia</strong></li>
            <li>Localidad: <strong>@Dato.sLocalidad</strong></li>
            <li>Calle: <strong>@Dato.sCalle</strong></li>
            <li>Numero exterior: <strong>@Dato.iNumExterior</strong></li>
            <li>Numero interior: <strong>@Dato.iNumInterir</strong></li>
            <li>Codigo postal: <strong>@Dato.iCodPostal</strong></li>
        </ul>
    </div>
    @using (Html.BeginForm("EliminarEmpresa", "Home", FormMethod.Post))
    {
        <input type="hidden" value="@Dato.pkEmpresa" name="txtId" />
        <div class="row">
            <div class="form-group">
                <div class="col-xs-12">
                    <input type="submit" value="Borrar" class="btn btn-danger" />
                    <a href="~/Home/Empresas"  class="btn btn-default">Regresar</a>
                </div>
            </div>
        </div>
    }
</div>


